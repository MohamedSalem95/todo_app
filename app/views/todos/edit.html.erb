<h3> edit todo </h3>

<% if @todo.errors.any? %>
	<div class="errors">
		<h3> the following error pervented the todo from being saved: </h3>
		<ul>
			<% @todo.errors.full_messages.each do |msg| %>
				<li style="color: red"> <%= msg %> </li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@todo) do |f| %>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %> <br>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "back to all todos", todos_path %>