<h3> listing all todos </h3>
<p>
	<%= link_to "create a new todo", new_todo_path %>
</p>

<table>
	<tr>
		<th> name </th>
		<th> description </th>
		<th colspan="3"></th>
	</tr>

	<% @todos.each do |todo| %>
		<tr>
			<td> <%= todo.name %> </td>
			<td> <%= todo.description %> </td>
			<td> <%= link_to "show", todo %> </td>
			<td> <%= link_to "edit", edit_todo_path(todo) %> </td>
			<td>
				<%= link_to "delete", todo, method: :delete, data: {confirm: "Are You Sure?"} %>
			</td>
		</tr>
	<% end %>
</table>